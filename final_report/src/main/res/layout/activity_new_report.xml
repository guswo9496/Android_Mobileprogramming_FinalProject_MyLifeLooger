<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.final_report.NewReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout3">
        <TextView
            android:id="@+id/reportTextview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout3">
        <Button
            android:onClick="onClick"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:id="@+id/reporttask"
            android:text="task"/>
        <Button
            android:onClick="onClick"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:id="@+id/reportlog"
            android:text="log"/>
        <Button
            android:onClick="onClick"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:id="@+id/reportmap"
            android:text="map"/>
        <Button
            android:onClick="onClick"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:id="@+id/reportmain"
            android:text="main"/>
        <Button
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/reportfinfish"
            android:text="preview"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout2"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/goalview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal List"
            android:textSize="25dp"/>

        <Spinner
            android:id="@+id/reportspinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/taskindex"
            android:layout_weight="1.0"></Spinner>

    </LinearLayout>
</RelativeLayout>
